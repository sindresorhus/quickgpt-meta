---
layout: null
---
<?xml version="1.0" standalone="yes"?>
<rss version="2.0" xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle">
	<channel>
		<title>{{ site.github.project_title }}</title>
		{% for release in site.github.releases %}
			{% if release.draft or release.prerelease %}{% continue %}{% endif %}
			{% assign ed_signature = release.body | split: "<!-- edSignature:" %}
			{% if ed_signature.size > 1 %}
				{% assign ed_signature = ed_signature[1] | split: "-->" | first | strip %}
			{% else %}
				{% assign ed_signature = "" %}
			{% endif %}
			{% assign build_version = release.body | split: "<!-- buildVersion:" %}
			{% if build_version.size > 1 %}
				{% assign build_version = build_version[1] | split: "-->" | first | strip %}
			{% else %}
				{% assign build_version = release.tag_name | remove_first:'v' %}
			{% endif %}
			<item>
				{% assign version = release.tag_name | remove_first:'v' %}
				<title>{{ version }}</title>
				<description><![CDATA[{{ release.body | replace: '<!--[^>]*-->', '' | markdownify }}]]></description>
				<pubDate>{{ release.published_at | date_to_rfc822 }}</pubDate>
				<sparkle:version>{{ build_version }}</sparkle:version>
				<sparkle:shortVersionString>{{ version }}</sparkle:shortVersionString>
				<sparkle:minimumSystemVersion>13.3</sparkle:minimumSystemVersion>
				{% assign firstAsset = release.assets | first %}
				<enclosure
					url="{{ firstAsset.browser_download_url }}"
					length="{{ firstAsset.size }}"
					type="application/octet-stream"
					sparkle:edSignature="{{ ed_signature }}"
				/>
			</item>
		{% endfor %}
	</channel>
</rss>
